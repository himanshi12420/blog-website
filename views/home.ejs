<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= mHomeContent %></p>

<% for(var i=0; i< newPost.length; i++){ %>

<h3> <%= newPost[i].title %> </h3>
<% if(newPost[i].body.length > 100){ %>
<p> <%= newPost[i].body.slice(0,100) + "..."  %>
  <a href="/post/<%=newPost[i].title%>">Read More</a>
</p>

<% }else{ %>
<p>
  <%= newPost[i].body %>
</p>
<% } %>
<% }; %>

